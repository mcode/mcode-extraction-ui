{
  "name": "mcode-extraction-ui",
  "productName": "mcode-extraction-ui",
  "version": "0.0.1",
  "description": "An Electron-based desktop app for performing mCODE extraction.",
  "main": "electron/electron.js",
  "scripts": {
    "build": "npm run build:frontend && npm run make",
    "build:frontend": "cd ./react-app && PUBLIC_URL=./ npm run build",
    "lint": "eslint \"./**/*.js\"",
    "lint:fix": "eslint \"./**/*.js\" --fix",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "prettier": "prettier --check \"**/*.js\"",
    "prettier:fix": "prettier --write \"**/*.js\"",
    "publish": "electron-forge publish",
    "start": "npm-run-all -p start:frontend start:electron",
    "start:electron": "wait-on tcp:3000 && electron-forge start",
    "start:frontend": "cd ./react-app && BROWSER=none npm start"
  },
  "keywords": [],
  "contributors": [
    "Seneca Anderson <Seneca_Anderson@student.uml.edu>"
  ],
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_cra_template"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^5.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "mcode-extraction-framework": "github:mcode/mcode-extraction-framework#develop",
    "react-bootstrap": "^1.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^12.0.6",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "wait-on": "^5.3.0"
  }
}
